<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Radio 1 Rock"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_one_play"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp" android:layout_marginStart="8dp"
            android:onClick="onPlay"
            app:layout_constraintEnd_toStartOf="@+id/btn_fresh_play" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_city_play" app:layout_constraintVertical_bias="0.281"/>
    <Button
            android:text="Radio City"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_city_play"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_energy_play" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_amg_play" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_one_play"/>
    <Button
            android:text="Radio Energy 90"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_energy_play"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_city_play" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_veronika_play" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_fresh_play"/>
    <Button
            android:text="Radio Veronika"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_veronika_play"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_amg_play" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_njoy_play" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_energy_play"/>
    <Button
            android:text="Radio FM +"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_FMplus_play"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_energyN_play"
            app:layout_constraintBottom_toTopOf="@+id/btn_rapmixxx_play" android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/btn_avto_play"/>
    <Button
            android:text="Radio Rap Mixxx"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_rapmixxx_play"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_energyN_play" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_FMplus_play" android:layout_marginTop="1dp"/>
    <Button
            android:text="Radio Energy"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_energyN_play"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_FMplus_play"
            app:layout_constraintBottom_toTopOf="@+id/btn_miami_play" android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/btn_oneN_play"/>
    <Button
            android:text="Radio Miami"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_miami_play"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_FMplus_play" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_energyN_play" android:layout_marginTop="1dp"/>
    <Button
            android:text="Radio Avto"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_avto_play"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_oneN_play" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_FMplus_play" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_njoy_play"/>
    <Button
            android:text="Radio Njoy"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_njoy_play"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_melody_play"
            app:layout_constraintBottom_toTopOf="@+id/btn_avto_play" android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/btn_veronika_play"/>
    <Button
            android:text="Radio 1"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_oneN_play"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_avto_play" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_energyN_play" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_melody_play"/>
    <Button
            android:text="Radio Melody"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_melody_play"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_njoy_play"
            app:layout_constraintBottom_toTopOf="@+id/btn_oneN_play" android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/btn_amg_play"/>
    <Button
            android:text="Radio AMG"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_amg_play"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_veronika_play" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_melody_play" android:layout_marginTop="1dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_city_play"/>
    <Button
            android:text="Radio Fresh"
            android:layout_width="190dp"
            android:layout_height="90dp" android:id="@+id/btn_fresh_play"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="onPlay"
            app:layout_constraintStart_toEndOf="@+id/btn_one_play" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_energy_play" app:layout_constraintVertical_bias="0.212"/>
    <TextView
            android:text="Start Player ... "
            android:layout_width="372dp"
            android:layout_height="26dp" android:id="@+id/onPlay"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="1dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_one_play"
            android:layout_marginStart="25dp" android:layout_marginEnd="25dp" android:layout_marginTop="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>